{
  "name": "ralph-terminal",
  "version": "0.1.5",
  "description": "TUI dashboard and project configurator for ralph-wiggum-docker-loop",
  "type": "module",
  "main": "dist/cli/index.js",
  "bin": {
    "ralph": "./dist/cli/index.js",
    "ralph-tui": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "bun run src/cli/index.ts",
    "build": "bun build src/cli/index.ts --outdir dist/cli --target node",
    "tui": "bun run src/cli/index.ts tui",
    "lint": "tsc --noEmit",
    "lint:code": "oxlint --type-aware src",
    "lint:fix": "oxfmt --write src && oxlint --type-aware --fix src",
    "format": "oxfmt --check src",
    "format:fix": "oxfmt --write src",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^14.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "typescript": "~5.7.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "tui",
    "terminal",
    "dashboard",
    "ralph",
    "cli",
    "configurator"
  ],
  "license": "MIT"
}
