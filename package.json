{
  "name": "ralph-terminal",
  "version": "0.1.11",
  "description": "TUI dashboard and project configurator for ralph-wiggum-docker-loop",
  "type": "module",
  "main": "dist/cli/index.js",
  "bin": {
    "ralph": "./dist/cli/index.js",
    "ralph-tui": "./dist/cli/index.js"
  },
  "scripts": {
    "dev": "bun run src/cli/index.ts",
    "build": "bun build src/cli/index.ts --outdir dist/cli --target node --external blessed --external blessed-contrib",
    "tui": "bun run src/cli/index.ts tui",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "tsc --noEmit",
    "lint:code": "oxlint --type-aware src",
    "lint:fix": "oxfmt --write src && oxlint --type-aware --fix src",
    "format": "oxfmt --check src",
    "format:fix": "oxfmt --write src",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "blessed-contrib": "^4.11.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/node": "^22.10.0",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "typescript": "~5.7.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "bun@1.3.5",
  "keywords": [
    "tui",
    "terminal",
    "dashboard",
    "ralph",
    "cli",
    "configurator"
  ],
  "license": "MIT"
}
